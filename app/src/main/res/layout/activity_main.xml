<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000080"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000080"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000080"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="340dp"
                android:layout_height="231dp"
                android:layout_gravity="center"
                android:foreground="@drawable/doctoricon" />

            <TextView
                android:id="@+id/textViewTeam"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textViewName"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:background="#FFFFFF"
                android:paddingTop="10dp"
                android:text="Find Your Doctor Here"
                android:textAlignment="center"
                android:textColor="#010C0B"
                android:textSize="19dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/Doctorshome"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:background="#0505B3"
                android:text="Find Doctors"
                android:textColor="#F6F5F5"
                android:textSize="24sp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="27dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="#000080"
                android:fontFamily="sans-serif-black"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textAlignment="center"
                android:textColor="#000080"
                android:textSize="30dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="340dp"
                android:layout_height="231dp"
                android:layout_gravity="center"
                android:foreground="@drawable/hospital" />

            <TextView
                android:id="@+id/textViewTeam2"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textViewName"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:background="#FFFFFF"
                android:paddingTop="10dp"
                android:text="Find Your Hospital Here"
                android:textAlignment="center"
                android:textColor="#010C0B"
                android:textSize="19dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/hospitalhome"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:background="#0505B3"
                android:text="Find Hospitals"
                android:textColor="#F6F5F5"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="#000080"
                android:fontFamily="sans-serif-black"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textAlignment="center"
                android:textColor="#000080"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </TableLayout>


</ScrollView>